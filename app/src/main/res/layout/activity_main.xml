<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:columnCount="4"
            android:rowCount="7"
            android:background="@color/black"
            tools:context=".MainActivity"
            
>

    <EditText
            android:id="@+id/text"
            android:layout_height="53dp"
            android:layout_columnSpan="4"
            android:layout_gravity="fill"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="20dp"
            android:gravity="center_horizontal|center_vertical"    
            android:inputType="numberDecimal"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="55sp"
            android:background="@null"
            android:focusable="false"/>

    <Button
            android:id="@+id/btn_clear"
            android:layout_columnSpan="2"
            android:layout_gravity="fill"
            android:layout_marginLeft="30dp"
            android:layout_margin="10dp"
            android:textColor="@color/white"

            android:text="AC"
            android:background="@drawable/btn_pill_deepgrey"
            android:textSize="35sp" />

    <Button
            android:id="@+id/btn_percent"
            android:text="%"
            android:layout_margin="10dp"
            android:layout_width="65dp"
            android:textColor="@color/white"

            android:layout_height="65dp"
            android:background="@drawable/btn_circle_deepgrey"
            android:textSize="35sp" />

    <Button
            android:id="@+id/btn_del"
            android:text="←"
            android:layout_width="65dp"
            android:layout_margin="10dp"
            android:layout_height="65dp"
            android:textColor="@color/white"

            android:background="@drawable/btn_circle_orange"
            android:textSize="35sp" />

    <Button
            android:id="@+id/btn_leftbra"
            android:text="(  )"
            android:layout_margin="10dp"
            android:layout_columnSpan="2"
            android:layout_width="150dp"
            android:layout_height="65dp"
            android:textColor="@color/white"
            android:background="@drawable/btn_pill_deepgrey"
            android:layout_marginLeft="30dp"
            android:textSize="35sp" />



    <Button
            android:id="@+id/btn_PandM"
            android:text="+/-"
            android:layout_margin="10dp"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:textColor="@color/white"
            android:background="@drawable/btn_circle_deepgrey"
            android:textSize="35sp"/>
    <Button
            android:id="@+id/btn_div"
            android:text="÷"
            android:layout_margin="10dp"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:textColor="@color/white"
            android:background="@drawable/btn_circle_orange"
            android:textSize="35sp" />



    <Button
            android:id="@+id/btn_sin"
            android:text="sin"
            android:layout_marginLeft="30dp"
            android:textAllCaps="false"
            android:layout_margin="10dp"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:textColor="@color/white"
            android:background="@drawable/btn_circle_deepgrey"
            android:textSize="35sp"/>

    <Button
            android:id="@+id/btn_cos"
            android:text="cos"
            android:textAllCaps="false"
            android:layout_margin="10dp"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:textColor="@color/white"
            android:background="@drawable/btn_circle_deepgrey"
            android:textSize="35sp" />

    <Button
            android:id="@+id/btn_squ2"
            android:text="√"
            android:layout_margin="10dp"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:textColor="@color/white"
            android:background="@drawable/btn_circle_deepgrey"
            android:textSize="35sp" />

    <Button
            android:id="@+id/btn_mul"
            android:text="×"
            android:layout_margin="10dp"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:textColor="@color/white"
            android:background="@drawable/btn_pill_orange"
            android:textSize="35sp" />

    <Button
            android:id="@+id/btn_7"
            android:text="7"
            android:layout_margin="10dp"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:textColor="@color/white"
            android:background="@drawable/btn_circle_grey"
            android:layout_marginLeft="30dp"
            android:textSize="35sp" />

    <Button
            android:id="@+id/btn_8"
            android:text="8"
            android:layout_margin="10dp"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:textColor="@color/white"
            android:background="@drawable/btn_circle_grey"
            android:textSize="35sp" />

    <Button
            android:id="@+id/btn_9"
            android:layout_margin="10dp"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:textColor="@color/white"
            android:background="@drawable/btn_circle_grey"
            android:text="9"
            android:textSize="35sp" />

    <Button
            android:id="@+id/btn_sub"
            android:text="-"
            android:layout_margin="10dp"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:textColor="@color/white"
            android:background="@drawable/btn_circle_orange"

            android:textSize="35sp" />

    <Button
            android:id="@+id/btn_4"
            android:text="4"
            android:layout_margin="10dp"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:textColor="@color/white"
            android:background="@drawable/btn_circle_grey"
            android:layout_marginLeft="30dp"
            android:textSize="35sp" />

    <Button
            android:id="@+id/btn_5"
            android:text="5"
            android:layout_margin="10dp"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:textColor="@color/white"
            android:background="@drawable/btn_circle_grey"
            android:textSize="35sp" />

    <Button
            android:id="@+id/btn_6"
            android:text="6"
            android:layout_margin="10dp"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:textColor="@color/white"
            android:background="@drawable/btn_circle_grey"
            android:textSize="35sp" />

    <Button
            android:id="@+id/btn_add"
            android:text="+"
            android:layout_margin="10dp"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:textColor="@color/white"
            android:background="@drawable/btn_circle_orange"
            android:textSize="35sp" />

    <Button
            android:id="@+id/btn_1"
            android:text="1"
            android:layout_margin="10dp"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:textColor="@color/white"
            android:background="@drawable/btn_circle_grey"
            android:layout_marginLeft="30dp"
            android:textSize="35sp" />

    <Button
            android:id="@+id/btn_2"
            android:text="2"
            android:layout_margin="10dp"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:textColor="@color/white"
            android:background="@drawable/btn_circle_grey"
            android:textSize="35sp" />

    <Button
            android:id="@+id/btn_3"
            android:text="3"
            android:layout_margin="10dp"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:textColor="@color/white"
            android:background="@drawable/btn_circle_grey"
            android:textSize="35sp" />

    <Button
            android:id="@+id/btn_equ"
            android:layout_marginRight="35dp"
            android:layout_gravity="fill_vertical"
            android:layout_rowSpan="2"
            android:layout_columnSpan="1"
            android:text="="
            android:layout_margin="10dp"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:textColor="@color/white"
            android:background="@drawable/btn_pill_orange"
            android:textSize="35sp" />

    <Button
            android:id="@+id/btn_0"
            android:layout_columnSpan="2"
            android:layout_gravity="fill_horizontal"
            android:text="0"
            android:layout_margin="10dp"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:textColor="@color/white"
            android:background="@drawable/btn_pill_grey"
            android:layout_marginLeft="30dp"

            android:textSize="35sp" />

    <Button
            android:id="@+id/btn_p"
            android:text="."
            android:layout_margin="10dp"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:textColor="@color/white"
            android:background="@drawable/btn_pill_grey"
            android:textSize="35sp" />


</GridLayout>

